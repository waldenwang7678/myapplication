<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_item_dog_show"
        android:layout_width="fill_parent"
        android:layout_height="175dip"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/txt_dog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:gravity="center_horizontal"
                android:text="拉布拉多"
                android:textColor="@color/txt_color_bg" />

            <ImageView
                android:id="@+id/img_dog_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_dog_name"
                android:background="@drawable/img_sex_man"
                android:gravity="center_horizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_dog_brithday"
                android:background="@drawable/img_dog_brithday"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/txt_dog_brithday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="2dip"
                android:text="2015-1-1"
                android:textColor="@color/txt_color_bg" />

            <TextView
                android:id="@+id/txt_dog_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:text="大型犬"
                android:textColor="@color/txt_color_bg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="4dip" >

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dip"
                android:text="售价："
                android:textColor="@color/txt_color_bg" />

            <TextView
                android:id="@+id/txt_dog_sale_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_price"
                android:text="$16000"
                android:textColor="@color/txt_color_bg" />

            <TextView
                android:id="@+id/txt_dingjing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="定金："
                android:textColor="@color/txt_color_bg" />

            <TextView
                android:id="@+id/txt_dog_drder_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_dingjing"
                android:text="$100"
                android:textColor="@color/bg_top_title_color" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>